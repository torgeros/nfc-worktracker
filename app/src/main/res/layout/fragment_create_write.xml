<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create.WriteFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="WRITE FRAGMENT" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pretend_write_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/pretend_write_fail"
        app:layout_constraintStart_toStartOf="parent"
        android:text="pretend tag written (success)"
        android:backgroundTint="@color/test"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pretend_write_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="pretend tag write FAILED"
        android:backgroundTint="@color/test"/>

</androidx.constraintlayout.widget.ConstraintLayout>
